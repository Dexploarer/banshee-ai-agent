{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Banshee",
  "version": "0.1.0",
  "identifier": "com.banshee.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "bun run vite build",
    "beforeDevCommand": "bun run vite dev"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Banshee - AI Agent Platform",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https: wss: ws:; font-src 'self' data:; object-src 'none'; base-uri 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
